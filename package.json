{
  "name": "kintone-plugin-ref",
  "version": "1.0.1",
  "author": "ribbit",
  "license": "MIT",
  "scripts": {
    "init": "ts-node scripts/marge-json.ts dev && kintone-plugin-packer --out dist/plugin-dev.zip plugin && node scripts/rename-ppk.ts",
    "build": "ts-node scripts/marge-json.ts prod && webpack --config webpack.prod.js",
    "dev": "ts-node scripts/marge-json.ts dev && concurrently \"yarn:dev:*\"",
    "dev:js": "webpack --config webpack.dev.js -w",
    "dev:upload": "node scripts/upload.js",
    "lint": "eslint ./src --cache --ext .js,.ts,.tsx"
  },
  "browser": {
    "path": false
  },
  "devDependencies": {
    "@emotion/react": "11.11.1",
    "@emotion/styled": "11.11.0",
    "@kintone/dts-gen": "8.0.2",
    "@kintone/plugin-packer": "8.0.1",
    "@kintone/plugin-uploader": "9.0.1",
    "@kintone/rest-api-client": "5.0.4",
    "@kintone/webpack-plugin-kintone-plugin": "8.0.2",
    "@konomi-app/kintone-utilities": "^4.1.5",
    "@lb-ribbit/kintone-secrets": "0.3.0",
    "@lb-ribbit/kintone-xapp": "0.4.0",
    "@mui/icons-material": "5.14.19",
    "@mui/material": "5.14.20",
    "@sentry/react": "7.86.0",
    "@types/luxon": "3.3.7",
    "@types/react": "18.2.43",
    "@types/react-dom": "18.2.17",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.13.2",
    "concurrently": "^8.2.2",
    "dotenv": "16.3.1",
    "esbuild-loader": "4.0.2",
    "eslint": "8.55.0",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "immer": "10.0.3",
    "luxon": "3.4.4",
    "notistack": "3.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-error-boundary": "4.0.11",
    "react-feather": "^2.0.10",
    "recoil": "0.7.7",
    "terser-webpack-plugin": "5.3.9",
    "ts-node": "10.9.2",
    "typescript": "5.3.3",
    "webpack": "5.89.0",
    "webpack-cli": "5.1.4",
    "webpack-merge": "5.10.0"
  },
  "prettier": {
    "printWidth": 100,
    "arrowParens": "always",
    "singleQuote": true,
    "jsxSingleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "endOfLine": "lf"
  }
}
